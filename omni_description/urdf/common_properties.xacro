    <material name="red">
        <color rgba="0.5 0.0 0.0 1.0"/>
    </material>

    <material name="green">
        <color rgba="0.0 0.5 0.0 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 0.5 1.0"/>
    </material>

    <xacro:property name="scale" value="10" />
